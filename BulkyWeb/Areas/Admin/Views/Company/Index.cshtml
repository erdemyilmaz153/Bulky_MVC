<div class="container" style="border: 1px solid;">
    <div class="row pt-4 pb-3">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center p-3 bg-light border rounded">
                <h2 class="mb-0">Company List</h2>
                <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Company
                </a>
            </div>
        </div>
    </div>

    <table id="tblData" class="table table-bordered table-striped mt-3" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>Phone Number</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>


@section Scripts {
    <script src="~/js/company.js"></script>
}